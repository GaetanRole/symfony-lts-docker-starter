root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
indent_brace_style = K&R
trim_trailing_whitespace = true

[assets/**]
indent_size = 2

[assets/scss/*]
indent_size = 4

[.gitlab-ci.yml]
indent_size = 2

[docker-compose{.gitlab-ci.yml, .override.yml, .override.yml.dist, .yml}]
indent_size = 2
